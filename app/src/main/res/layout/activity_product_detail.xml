<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ”¥ Carrusel de imÃ¡genes -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImages"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="#EEEEEE"
            android:clipToPadding="false"
            android:layout_marginBottom="8dp" />

        <!-- ðŸ”µ Indicadores -->
        <LinearLayout
            android:id="@+id/indicatorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ”¥ TÃ­tulo -->
        <TextView
            android:id="@+id/txtTitleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="22sp" />

        <!-- ðŸ”¥ Precio -->
        <TextView
            android:id="@+id/txtPriceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 puntos"
            android:textColor="#007A5A"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="4dp" />

        <!-- ðŸ”¥ ALERTA DE OFERTA -->
        <TextView
            android:id="@+id/txtOfferAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tienes una oferta pendiente"
            android:textColor="#D32F2F"
            android:textStyle="bold"
            android:background="#FFF3E0"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <!-- LÃ­nea -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#DDDDDD" />

        <!-- ðŸ”¥ DescripciÃ³n tÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <!-- ðŸ”¥ DescripciÃ³n -->
        <TextView
            android:id="@+id/txtDescriptionDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="15sp"
            android:layout_marginTop="4dp" />

        <!-- LÃ­nea -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#DDDDDD" />

        <!-- ðŸ”¥ Contenedor dinÃ¡mico de extras -->
        <LinearLayout
            android:id="@+id/containerExtra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp" />

        <!-- LÃ­nea -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#DDDDDD" />

        <!-- ðŸ”¥ BLOQUE DEL VENDEDOR -->
        <LinearLayout
            android:id="@+id/sellerBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:background="#F7F7F7"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imgSeller"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_user_placeholder"
                android:background="#DDDDDD"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSellerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendedor"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtSellerRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ValoraciÃ³n â€”"
                    android:textColor="#777"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- BOTONES COMPRADOR -->
        <Button
            android:id="@+id/btnChat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Contactar vendedor"
            android:textAllCaps="false"
            android:backgroundTint="#5D4CFF"
            android:textColor="#FFF"
            android:layout_marginTop="26dp" />

        <Button
            android:id="@+id/btnComprar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Comprar"
            android:textAllCaps="false"
            android:backgroundTint="#7A3BFF"
            android:textColor="#FFF"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnOferta"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Enviar oferta"
            android:textAllCaps="false"
            android:backgroundTint="#00897B"
            android:textColor="#FFF"
            android:layout_marginTop="12dp"
            android:visibility="visible"/>

        <!-- BOTONES VENDEDOR -->
        <Button
            android:id="@+id/btnVender"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Editar producto"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Eliminar producto"
            android:textAllCaps="false"
            android:backgroundTint="#C62828"
            android:textColor="#FFF"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>

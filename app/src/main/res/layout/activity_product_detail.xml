<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ✅ Imagen -->
        <ImageView
            android:id="@+id/imgDetail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:background="#EFEFEF"
            android:clipToOutline="true"
            android:layout_marginBottom="16dp"/>

        <!-- ✅ Título -->
        <TextView
            android:id="@+id/txtTitleDetail"
            android:textSize="22sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ✅ Precio -->
        <TextView
            android:id="@+id/txtPriceDetail"
            android:textSize="22sp"
            android:textColor="#007A5A"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ✅ Línea divisor -->
        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!-- ✅ Descripción -->
        <TextView
            android:text="Descripción"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtDescriptionDetail"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ✅ Línea divisor -->
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!-- ✅ Sección extra dinámicos -->
        <LinearLayout
            android:id="@+id/containerExtra"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ✅ Línea divisor -->
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!-- ✅ BLOQUE VENDEDOR (clic) -->
        <LinearLayout
            android:id="@+id/sellerBlock"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/imgSeller"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_user_placeholder"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:background="#DDDDDD"
                android:padding="4dp"
                android:clipToOutline="true"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtSellerName"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="Vendedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtSellerRating"
                    android:textSize="13sp"
                    android:textColor="#777777"
                    android:text="Valoración • —"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <!-- ✅ Botón -->
        <Button
            android:id="@+id/btnChat"
            android:text="Contactar vendedor"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5D4CFF"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
        <Button
            android:id="@+id/btnVender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vender"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>

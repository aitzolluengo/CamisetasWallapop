<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".activities.AddCamisetaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AÃ±adir Camiseta de FÃºtbol"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completa todos los datos de tu camiseta"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Selector de imagen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/bg_image_placeholder"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¸ Seleccionar Foto"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_rounded"
                android:drawablePadding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Imagen obligatoria"
                android:textSize="12sp"
                android:textColor="@color/red"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la camiseta"
            app:startIconDrawable="@drawable/ic_tshirt"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Equipo -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Equipo (ej: Real Madrid, FC Barcelona)"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Talla -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Talla (ej: S, M, L, XL)"
            android:layout_marginBottom="12dp">

            <!-- CORREGIDO: TextInputEditText en lugar de textinput.TextInputEditText -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTalla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Precio -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio (â‚¬)"
            app:startIconDrawable="@drawable/ic_price_tag"
            app:endIconMode="clear_text"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- DescripciÃ³n -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DescripciÃ³n (estado, temporada, caracterÃ­sticas...)"
            app:startIconDrawable="@drawable/ic_info"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="3"
                android:maxLines="6" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- BotÃ³n guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âž• AÃ±adir Camiseta"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_rounded"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>

        <!-- InformaciÃ³n adicional -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Tu camiseta serÃ¡ revisada y aparecerÃ¡ en el listado principal"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
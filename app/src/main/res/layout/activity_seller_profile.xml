<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgSellerProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user_placeholder"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txtSellerNameProfile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ðŸ”¥ NUEVO: TextView para mostrar rating -->
        <TextView
            android:id="@+id/txtSellerRatingProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="â­ Sin valoraciones"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/txtSellerEmailProfile"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ðŸ”¥ NUEVO: BotÃ³n de seguridad -->
        <Button
            android:id="@+id/btnSecurity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Opciones de seguridad"
            android:textAllCaps="false"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFF"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:text="Productos del vendedor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSellerProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
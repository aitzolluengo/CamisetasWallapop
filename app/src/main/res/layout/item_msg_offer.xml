<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:radius="12dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/txtOfferPrice"
        android:text="Oferta de 20â‚¬"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtOfferStatus"
        android:text="Pendiente"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Botones solo visibles para el vendedor -->
    <LinearLayout
        android:id="@+id/blockButtons"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAcceptOffer"
            android:text="Aceptar"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRejectOffer"
            android:text="Rechazar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>

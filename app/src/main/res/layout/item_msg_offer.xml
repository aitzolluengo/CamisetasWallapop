<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_offer_bubble"
    android:padding="12dp"
    android:layout_margin="8dp">

    <!-- TEXTO PRINCIPAL -->
    <TextView
        android:id="@+id/txtOfferTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oferta de 20â‚¬"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000" />

    <!-- ESTADO -->
    <TextView
        android:id="@+id/txtOfferStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pendiente"
        android:textSize="14sp"
        android:textColor="#666"
        android:layout_marginTop="4dp" />

    <!-- BOTONES (solo vendedor) -->
    <LinearLayout
        android:id="@+id/layoutOfferButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnAcceptOffer"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Aceptar"
            android:textSize="12sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <Button
            android:id="@+id/btnRejectOffer"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Rechazar"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>
    </LinearLayout>

</LinearLayout>
